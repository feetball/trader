{
  "name": "crypto-momentum-trader",
  "version": "0.8.47",
  "description": "Automated momentum trading bot for sub-$1 cryptocurrencies on Coinbase",
  "main": "bot.js",
  "type": "module",
  "scripts": {
    "dev": "npx concurrently \"npm run server\" \"npm run dashboard\"",
    "start": "node bot.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --detectOpenHandles --forceExit",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch --detectOpenHandles",
    "test:progress": "NODE_OPTIONS=--experimental-vm-modules jest --detectOpenHandles --reporters=default --reporters=jest-progress-bar-reporter --verbose",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage --coverageReporters=text",
    "test:connection": "node test-connection.js",
    "analyze": "node analyze.js",
    "server": "node server.js",
    "dashboard": "cd frontend && npm run dev"
  },
  "keywords": [
    "crypto",
    "trading",
    "bot",
    "coinbase"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "jest": "^30.2.0",
    "jest-progress-bar-reporter": "^1.0.25",
    "supertest": "^7.1.4"
  }
}
